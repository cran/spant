  title    = "spant: An R package for magnetic resonance spectroscopy analysis",
  author   = "Martin Wilson",
  journal  = "JOSS",
  year     = "2021",
  textVersion = "Martin Wilson, spant: An R package for magnetic resonance spectroscopy analysis, JOSS, in-press."
)

